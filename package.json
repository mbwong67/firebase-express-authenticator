{
  "name": "@weegigs/firebase-express-authenticator",
  "version": "1.1.2",
  "description": "Express middleware for firebase authentication",
  "main": "lib/index.js",
  "author": "Kevin O'Neill <kevin@oneill.id.au>",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/firebase-express-authenticator.git"
  },
  "license": "MIT",
  "keywords": [
    "firebase",
    "express",
    "auth",
    "authentication",
    "middleware"
  ],
  "private": false,
  "files": [
    "lib",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENCE"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run lint && yarn run compile",
    "clean": "npx rimraf lib",
    "precommit": "lint-staged",
    "compile": "yarn run compile:tsc",
    "compile:tsc": "npx tsc -p .",
    "lint": "npx tslint -c tslint.json --project . \"src/**/*.ts\"",
    "test": "yarn run test:unit",
    "test:unit": "npx jest \"tests/*\" --env=node --coverage",
    "test:watch": "npx jest \"tests/*\" --env=node --coverage --watch",
    "watch": "npx concurrently -k --names='tsc' 'yarn run watch:tsc'",
    "watch:tsc": "npx tsc -p . --watch",
    "release": "yarn build && npx semantic-release"
  },
  "dependencies": {},
  "peerDependencies": {
    "express": "^4.16.3",
    "firebase-admin": "^6.0.0"
  },
  "devDependencies": {
    "@firebase/app-types": "0.3.2",
    "@semantic-release/changelog": "3.0.0",
    "@semantic-release/git": "7.0.3",
    "@semantic-release/npm": "5.0.4",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/node": "10.9.3",
    "concurrently": "4.0.1",
    "express": "4.16.3",
    "firebase-admin": "6.0.0",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "jest-cli": "23.5.0",
    "jest-environment-node-debug": "2.0.0",
    "lint-staged": "7.2.2",
    "nodemon": "1.18.3",
    "prettier": "1.14.2",
    "prettier-package-json": "2.0.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.9.12",
    "ts-jest": "23.1.4",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-config-standard": "7.1.0",
    "typescript": "3.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "transform": {
      ".(ts|tsx)": "node_modules/ts-jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "git add package.json"
    ]
  },
  "nodemonConfig": {
    "delay": "2000"
  },
  "types": "lib/index.d.ts",
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
